{
  "id": "sysctl-kernel-params",
  "title": "Afficher/modifier les paramètres kernel",
  "description": "Affiche ou modifie les paramètres du noyau Linux en temps réel",
  "category": "⚡ Performance",
  "platform": 1,
  "level": 1,
  "tags": [
    "sysctl",
    "kernel",
    "tuning",
    "performance",
    "parameters"
  ],
  "linuxCommandTemplateId": "sysctl-cmd",
  "linuxCommandTemplate": {
    "id": "sysctl-cmd",
    "platform": 1,
    "name": "sysctl",
    "commandPattern": "sysctl {parameter}",
    "parameters": [
      {
        "name": "parameter",
        "label": "Paramètre",
        "type": "string",
        "defaultValue": "-a",
        "required": true,
        "description": "Paramètre kernel (-a=all, param.name, param=value)"
      }
    ]
  },
  "examples": [
    {
      "command": "sysctl -a",
      "description": "Liste tous les paramètres kernel",
      "platform": 1
    },
    {
      "command": "sysctl net.ipv4.ip_forward",
      "description": "Affiche un paramètre spécifique",
      "platform": 1
    },
    {
      "command": "sudo sysctl -w net.ipv4.ip_forward=1",
      "description": "Modifie un paramètre (temporaire)",
      "platform": 1
    },
    {
      "command": "sysctl vm.swappiness",
      "description": "Valeur de swappiness",
      "platform": 1
    },
    {
      "command": "sysctl -w vm.swappiness=10",
      "description": "Modifier swappiness",
      "platform": 1
    },
    {
      "command": "sysctl -p",
      "description": "Recharger /etc/sysctl.conf",
      "platform": 1
    },
    {
      "command": "sysctl -a | head -50",
      "description": "Tous les paramètres",
      "platform": 1
    }
  ],
  "notes": "Modifications temporaires. Éditer /etc/sysctl.conf pour permanence. sysctl -p recharge le fichier.",
  "links": [
    {
      "title": "sysctl documentation",
      "url": "https://man7.org/linux/man-pages/man8/sysctl.8.html"
    }
  ]
}