{
  "id": "crontab-list",
  "title": "Lister les tâches cron",
  "description": "Affiche les tâches planifiées cron de l'utilisateur",
  "category": "⚙️ Services & Automation",
  "platform": 1,
  "level": 0,
  "tags": [
    "cron",
    "crontab",
    "scheduler",
    "automation",
    "tasks"
  ],
  "linuxCommandTemplateId": "crontab-list-cmd",
  "linuxCommandTemplate": {
    "id": "crontab-list-cmd",
    "platform": 1,
    "name": "crontab",
    "commandPattern": "crontab -{option} {user}",
    "parameters": [
      {
        "name": "option",
        "label": "Option",
        "type": "string",
        "defaultValue": "l",
        "required": true,
        "description": "Option (l=list, e=edit, r=remove, -u user)"
      },
      {
        "name": "user",
        "label": "Utilisateur",
        "type": "string",
        "defaultValue": "",
        "required": false,
        "description": "Utilisateur (nécessite sudo)"
      }
    ]
  },
  "examples": [
    {
      "command": "crontab -l",
      "description": "Liste vos tâches cron",
      "platform": 1
    },
    {
      "command": "crontab -e",
      "description": "Édite vos tâches cron",
      "platform": 1
    },
    {
      "command": "sudo crontab -l -u username",
      "description": "Liste les tâches d'un autre utilisateur",
      "platform": 1
    },
    {
      "command": "crontab -l jdupont",
      "description": "Exemple utilisant le paramètre 'option': Option (l=list, e=edit, r=remove, -u user). Remplacez verbose par la valeur appropriée selon votre environnement.",
      "platform": 1
    },
    {
      "command": "crontab -verbose jdupont",
      "description": "Exemple utilisant le paramètre 'user': Utilisateur (nécessite sudo). Remplacez jdupont par la valeur appropriée selon votre environnement.",
      "platform": 1
    },
    {
      "command": "crontab -r",
      "description": "Supprimer toutes les tâches cron",
      "platform": 1
    },
    {
      "command": "crontab -l -u www-data",
      "description": "Lister les tâches d'un autre utilisateur",
      "platform": 1
    },
    {
      "command": "cat /etc/crontab",
      "description": "Afficher le crontab système",
      "platform": 1
    },
    {
      "command": "ls -la /etc/cron.d/",
      "description": "Fichiers cron.d",
      "platform": 1
    }
  ],
  "notes": "Format: min hour day month weekday command. -e pour éditer. Logs dans /var/log/syslog.",
  "links": [
    {
      "title": "Crontab documentation",
      "url": "https://man7.org/linux/man-pages/man5/crontab.5.html"
    }
  ]
}