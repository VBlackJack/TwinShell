<Window x:Class="TwinShell.App.Views.ActionEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:TwinShell.App.ViewModels"
        xmlns:enums="clr-namespace:TwinShell.Core.Enums;assembly=TwinShell.Core"
        mc:Ignorable="d"
        Title="Action Editor - TwinShell"
        Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}"
        ResizeMode="CanResize"
        MinHeight="600" MinWidth="800">

    <Window.Resources>
        <!-- Label Style -->
        <Style x:Key="LabelTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <!-- Hint Style -->
        <Style x:Key="HintTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="Margin" Value="0,2,0,0"/>
        </Style>

        <!-- Parameter Border Style -->
        <Style x:Key="ParameterBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Action Information"
                   FontSize="20"
                   FontWeight="SemiBold"
                   Foreground="{DynamicResource PrimaryBrush}"
                   Margin="0,0,0,16"/>

        <!-- Content - TabControl -->
        <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0">
            <!-- Tab General -->
            <TabItem Header="General">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,16,0,0">
                    <StackPanel>
                        <TextBlock x:Name="TitleLabel" Text="Title *" Style="{StaticResource LabelTextStyle}"/>
                        <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 AutomationProperties.LabeledBy="{Binding ElementName=TitleLabel}"
                                 TabIndex="1"/>

                        <TextBlock x:Name="DescriptionLabel" Text="Description" Style="{StaticResource LabelTextStyle}"/>
                        <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 AutomationProperties.LabeledBy="{Binding ElementName=DescriptionLabel}"
                                 TextWrapping="Wrap" AcceptsReturn="True"
                                 Height="80" TabIndex="2"/>

                        <TextBlock x:Name="CategoryLabel" Text="Category *" Style="{StaticResource LabelTextStyle}"/>
                        <ComboBox ItemsSource="{Binding AvailableCategories}"
                                  Text="{Binding Category, UpdateSourceTrigger=PropertyChanged}"
                                  IsEditable="True"
                                  AutomationProperties.LabeledBy="{Binding ElementName=CategoryLabel}"
                                  Style="{StaticResource {x:Type ComboBox}}"
                                  TabIndex="3"/>

                        <TextBlock Text="Platform *" Style="{StaticResource LabelTextStyle}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,12">
                            <RadioButton Content="Windows"
                                       IsChecked="{Binding SelectedPlatform, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Windows}"
                                       Margin="0,0,20,0" TabIndex="4"/>
                            <RadioButton Content="Linux"
                                       IsChecked="{Binding SelectedPlatform, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Linux}"
                                       Margin="0,0,20,0" TabIndex="5"/>
                            <RadioButton Content="Both"
                                       IsChecked="{Binding SelectedPlatform, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Both}"
                                       TabIndex="6"/>
                        </StackPanel>

                        <TextBlock Text="Criticality Level *" Style="{StaticResource LabelTextStyle}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,12">
                            <RadioButton Content="Info (read-only)"
                                       IsChecked="{Binding SelectedLevel, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Info}"
                                       Margin="0,0,20,0" TabIndex="7"/>
                            <RadioButton Content="Run (execution)"
                                       IsChecked="{Binding SelectedLevel, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Run}"
                                       Margin="0,0,20,0" TabIndex="8"/>
                            <RadioButton Content="Dangerous"
                                       IsChecked="{Binding SelectedLevel, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Dangerous}"
                                       TabIndex="9"/>
                        </StackPanel>

                        <TextBlock x:Name="TagsLabel" Text="Tags (comma separated)" Style="{StaticResource LabelTextStyle}"/>
                        <TextBox Text="{Binding Tags, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 AutomationProperties.LabeledBy="{Binding ElementName=TagsLabel}"
                                 TabIndex="10"/>
                        <TextBlock Text="Example: ad, users, diagnostic"
                                   Style="{StaticResource HintTextStyle}"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Tab Windows Command -->
            <TabItem Header="Windows Command">
                <TabItem.Visibility>
                    <MultiBinding Converter="{StaticResource PlatformToVisibilityMultiConverter}">
                        <Binding Path="SelectedPlatform"/>
                    </MultiBinding>
                </TabItem.Visibility>
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,16,0,0">
                    <StackPanel>
                        <TextBlock Text="Command Name *" Style="{StaticResource LabelTextStyle}"/>
                        <TextBox Text="{Binding WindowsCommandName, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBoxStyle}"/>
                        <TextBlock Text="Example: Get-ADUser"
                                   Style="{StaticResource HintTextStyle}"/>

                        <TextBlock Text="PowerShell Command Pattern *" Style="{StaticResource LabelTextStyle}"/>
                        <TextBox Text="{Binding WindowsCommandPattern, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 TextWrapping="Wrap" AcceptsReturn="True"
                                 FontFamily="Consolas" Height="120"/>
                        <TextBlock Text="Use {paramName} for dynamic parameters"
                                   Style="{StaticResource HintTextStyle}"/>

                        <StackPanel Orientation="Horizontal" Margin="0,16,0,8">
                            <TextBlock Text="Parameters" Style="{StaticResource LabelTextStyle}" Margin="0"/>
                            <Button Content="+ Add"
                                    Command="{Binding AddWindowsParameterCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Padding="12,10"
                                    MinWidth="44"
                                    MinHeight="44"
                                    Margin="12,0,0,0"/>
                        </StackPanel>

                        <ItemsControl ItemsSource="{Binding WindowsParameters}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource ParameterBorderStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Column="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,8,0">
                                                    <TextBlock Text="Parameter Name" FontSize="11" Margin="0,0,0,2"/>
                                                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                                                </StackPanel>

                                                <StackPanel Grid.Row="0" Grid.Column="1" Margin="8,0,0,0">
                                                    <TextBlock Text="Display Label" FontSize="11" Margin="0,0,0,2"/>
                                                    <TextBox Text="{Binding Label, UpdateSourceTrigger=PropertyChanged}"/>
                                                </StackPanel>

                                                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,8,8,0">
                                                    <TextBlock Text="Type" FontSize="11" Margin="0,0,0,2"/>
                                                    <ComboBox SelectedItem="{Binding Type}">
                                                        <ComboBoxItem Content="string"/>
                                                        <ComboBoxItem Content="int"/>
                                                        <ComboBoxItem Content="bool"/>
                                                    </ComboBox>
                                                </StackPanel>

                                                <StackPanel Grid.Row="1" Grid.Column="1" Margin="8,8,0,0">
                                                    <TextBlock Text="Default Value" FontSize="11" Margin="0,0,0,2"/>
                                                    <TextBox Text="{Binding DefaultValue, UpdateSourceTrigger=PropertyChanged}"/>
                                                </StackPanel>

                                                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,8,0,0">
                                                    <CheckBox Content="Required parameter" IsChecked="{Binding Required}"/>
                                                    <TextBlock Text="Description" FontSize="11" Margin="0,8,0,2"/>
                                                    <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"/>
                                                </StackPanel>
                                            </Grid>

                                            <Button Grid.Column="1" Content="&#xE74D;"
                                                    FontFamily="Segoe MDL2 Assets"
                                                    Command="{Binding DataContext.RemoveWindowsParameterCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Padding="12,10"
                                                    MinWidth="44"
                                                    MinHeight="44"
                                                    VerticalAlignment="Top"
                                                    Background="Transparent"
                                                    BorderBrush="{DynamicResource BorderBrush}"
                                                    ToolTip="Remove this parameter"
                                                    AutomationProperties.Name="Remove parameter"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Tab Linux Command -->
            <TabItem Header="Linux Command">
                <TabItem.Visibility>
                    <MultiBinding Converter="{StaticResource PlatformToVisibilityMultiConverter}">
                        <Binding Path="SelectedPlatform"/>
                    </MultiBinding>
                </TabItem.Visibility>
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,16,0,0">
                    <StackPanel>
                        <TextBlock Text="Command Name *" Style="{StaticResource LabelTextStyle}"/>
                        <TextBox Text="{Binding LinuxCommandName, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBoxStyle}"/>
                        <TextBlock Text="Example: systemctl"
                                   Style="{StaticResource HintTextStyle}"/>

                        <TextBlock Text="Bash Command Pattern *" Style="{StaticResource LabelTextStyle}"/>
                        <TextBox Text="{Binding LinuxCommandPattern, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 TextWrapping="Wrap" AcceptsReturn="True"
                                 FontFamily="Consolas" Height="120"/>
                        <TextBlock Text="Use {paramName} for dynamic parameters"
                                   Style="{StaticResource HintTextStyle}"/>

                        <StackPanel Orientation="Horizontal" Margin="0,16,0,8">
                            <TextBlock Text="Parameters" Style="{StaticResource LabelTextStyle}" Margin="0"/>
                            <Button Content="+ Add"
                                    Command="{Binding AddLinuxParameterCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Padding="12,10"
                                    MinWidth="44"
                                    MinHeight="44"
                                    Margin="12,0,0,0"/>
                        </StackPanel>

                        <ItemsControl ItemsSource="{Binding LinuxParameters}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource ParameterBorderStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Column="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,8,0">
                                                    <TextBlock Text="Parameter Name" FontSize="11" Margin="0,0,0,2"/>
                                                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                                                </StackPanel>

                                                <StackPanel Grid.Row="0" Grid.Column="1" Margin="8,0,0,0">
                                                    <TextBlock Text="Display Label" FontSize="11" Margin="0,0,0,2"/>
                                                    <TextBox Text="{Binding Label, UpdateSourceTrigger=PropertyChanged}"/>
                                                </StackPanel>

                                                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,8,8,0">
                                                    <TextBlock Text="Type" FontSize="11" Margin="0,0,0,2"/>
                                                    <ComboBox SelectedItem="{Binding Type}">
                                                        <ComboBoxItem Content="string"/>
                                                        <ComboBoxItem Content="int"/>
                                                        <ComboBoxItem Content="bool"/>
                                                    </ComboBox>
                                                </StackPanel>

                                                <StackPanel Grid.Row="1" Grid.Column="1" Margin="8,8,0,0">
                                                    <TextBlock Text="Default Value" FontSize="11" Margin="0,0,0,2"/>
                                                    <TextBox Text="{Binding DefaultValue, UpdateSourceTrigger=PropertyChanged}"/>
                                                </StackPanel>

                                                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,8,0,0">
                                                    <CheckBox Content="Required parameter" IsChecked="{Binding Required}"/>
                                                    <TextBlock Text="Description" FontSize="11" Margin="0,8,0,2"/>
                                                    <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"/>
                                                </StackPanel>
                                            </Grid>

                                            <Button Grid.Column="1" Content="&#xE74D;"
                                                    FontFamily="Segoe MDL2 Assets"
                                                    Command="{Binding DataContext.RemoveLinuxParameterCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Padding="12,10"
                                                    MinWidth="44"
                                                    MinHeight="44"
                                                    VerticalAlignment="Top"
                                                    Background="Transparent"
                                                    BorderBrush="{DynamicResource BorderBrush}"
                                                    ToolTip="Remove this parameter"
                                                    AutomationProperties.Name="Remove parameter"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Tab Notes -->
            <TabItem Header="Notes">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,16,0,0">
                    <StackPanel>
                        <TextBlock Text="Additional Notes" Style="{StaticResource LabelTextStyle}"/>
                        <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 TextWrapping="Wrap" AcceptsReturn="True"
                                 Height="300"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Tab Examples -->
            <TabItem Header="Examples">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,16,0,0">
                    <StackPanel>
                        <!-- Platform Filter - AT THE TOP -->
                        <Border Background="{DynamicResource SurfaceBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="12"
                                Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Filter by Platform"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,8"/>
                                <StackPanel Orientation="Horizontal">
                                    <RadioButton Content="All"
                                                 IsChecked="{Binding SelectedExamplePlatformFilter, Converter={StaticResource NullablePlatformToBoolConverter}, ConverterParameter={x:Null}}"
                                                 Margin="0,0,16,0"/>
                                    <RadioButton Content="Windows"
                                                 IsChecked="{Binding SelectedExamplePlatformFilter, Converter={StaticResource NullablePlatformToBoolConverter}, ConverterParameter={x:Static enums:Platform.Windows}}"
                                                 Margin="0,0,16,0"/>
                                    <RadioButton Content="Linux"
                                                 IsChecked="{Binding SelectedExamplePlatformFilter, Converter={StaticResource NullablePlatformToBoolConverter}, ConverterParameter={x:Static enums:Platform.Linux}}"
                                                 Margin="0,0,16,0"/>
                                    <RadioButton Content="Cross-Platform"
                                                 IsChecked="{Binding SelectedExamplePlatformFilter, Converter={StaticResource NullablePlatformToBoolConverter}, ConverterParameter={x:Static enums:Platform.Both}}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="Command Examples" Style="{StaticResource LabelTextStyle}" Margin="0"/>
                            <Button Content="+ Add Example"
                                    Command="{Binding AddExampleCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Padding="12,10"
                                    MinWidth="44"
                                    MinHeight="44"
                                    Margin="12,0,0,0"/>
                        </StackPanel>
                        <TextBlock Text="Examples help users understand how to use the command."
                                   Style="{StaticResource HintTextStyle}"
                                   Margin="0,0,0,16"/>

                        <ItemsControl ItemsSource="{Binding FilteredExamples}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource ParameterBorderStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <!-- Platform selector for this example -->
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                    <TextBlock Text="Platform:" FontSize="11" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                    <ComboBox SelectedValue="{Binding Platform}"
                                                              SelectedValuePath="Tag"
                                                              Width="120">
                                                        <ComboBoxItem Content="Windows" Tag="{x:Static enums:Platform.Windows}"/>
                                                        <ComboBoxItem Content="Linux" Tag="{x:Static enums:Platform.Linux}"/>
                                                        <ComboBoxItem Content="Both" Tag="{x:Static enums:Platform.Both}"/>
                                                    </ComboBox>
                                                </StackPanel>

                                                <TextBlock Text="Example Command" FontSize="11" Margin="0,0,0,2"/>
                                                <TextBox Text="{Binding Command, UpdateSourceTrigger=PropertyChanged}"
                                                         FontFamily="Consolas"
                                                         TextWrapping="Wrap"
                                                         AcceptsReturn="True"
                                                         Height="80"
                                                         Margin="0,0,0,8"/>

                                                <TextBlock Text="Example Description" FontSize="11" Margin="0,0,0,2"/>
                                                <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                                         TextWrapping="Wrap"
                                                         Height="60"/>
                                            </StackPanel>

                                            <Button Grid.Column="1" Content="&#xE74D;"
                                                    FontFamily="Segoe MDL2 Assets"
                                                    Command="{Binding DataContext.RemoveExampleCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Padding="12,10"
                                                    MinWidth="44"
                                                    MinHeight="44"
                                                    VerticalAlignment="Top"
                                                    Background="Transparent"
                                                    BorderBrush="{DynamicResource BorderBrush}"
                                                    ToolTip="Remove this example"
                                                    AutomationProperties.Name="Remove example"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Validation Error -->
        <Border Grid.Row="2"
                Background="{DynamicResource DangerBackgroundBrush}"
                BorderBrush="{DynamicResource DangerBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="12"
                Margin="0,16,0,16"
                AutomationProperties.LiveSetting="Assertive">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ValidationError, Converter={StaticResource NullToVisibilityConverter}}" Value="Visible">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="&#xE7BA;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center" Foreground="{DynamicResource DangerBrush}"/>
                <TextBlock Text="{Binding ValidationError}"
                           Foreground="{DynamicResource DangerBrush}"
                           FontWeight="SemiBold"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Footer Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    Width="100"
                    Margin="0,0,12,0"
                    Padding="12,10"
                    MinHeight="44"/>
            <Button Content="Save"
                    Command="{Binding SaveCommand}"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Width="120"
                    Padding="12,10"
                    MinHeight="44"/>
        </StackPanel>
    </Grid>
</Window>
