<UserControl x:Class="TwinShell.App.Views.OutputPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="800"
             Background="{DynamicResource BackgroundBrush}">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header and Controls -->
        <Border Grid.Row="0"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="12"
                Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- UX: Status and Progress (removed emoji for professional consistency) -->
                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="{Binding StatusMessage}"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryBrush}"/>
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock Text="Execution time: "
                                   FontSize="12"
                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                        <TextBlock Text="{Binding ExecutionTime}"
                                   FontSize="12"
                                   FontFamily="Consolas"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>

                <!-- UX: Action Buttons with text-only labels (consistent with rest of app, professional) -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Stop"
                            Command="{Binding StopExecutionCommand}"
                            IsEnabled="{Binding IsExecuting}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Padding="12,10"
                            MinWidth="44"
                            MinHeight="44"
                            Margin="0,0,8,0"
                            ToolTip="Stop the currently running command"
                            AutomationProperties.Name="Stop execution"
                            AutomationProperties.HelpText="Stop the currently executing command"/>
                    <Button Content="Clear"
                            Command="{Binding ClearOutputCommand}"
                            IsEnabled="{Binding IsExecuting, Converter={StaticResource InverseBooleanConverter}}"
                            Padding="12,10"
                            MinWidth="44"
                            MinHeight="44"
                            Background="{DynamicResource SurfaceBrush}"
                            Foreground="{DynamicResource TextPrimaryBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            Cursor="Hand"
                            ToolTip="Clear the output console"
                            AutomationProperties.Name="Clear output"
                            AutomationProperties.HelpText="Clear all output from the console">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="4"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Output Console -->
        <Border Grid.Row="1"
                Background="{DynamicResource CodeBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="8">
            <ScrollViewer x:Name="OutputScrollViewer"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto"
                          Padding="12">
                <ItemsControl ItemsSource="{Binding OutputLines}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock FontFamily="Consolas"
                                       FontSize="12"
                                       TextWrapping="Wrap">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#D4D4D4"/> <!-- Default light gray -->
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsError}" Value="True">
                                                <Setter Property="Foreground" Value="#F48771"/> <!-- Error red -->
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                                <Run Text="{Binding Text, Mode=OneWay}"/>
                            </TextBlock>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Progress Bar (visible when executing) -->
        <Border Grid.Row="2"
                Margin="0,12,0,0"
                Visibility="{Binding IsExecuting, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ProgressBar IsIndeterminate="True"
                         Height="4"
                         Foreground="{DynamicResource PrimaryBrush}"/>
        </Border>
    </Grid>
</UserControl>
