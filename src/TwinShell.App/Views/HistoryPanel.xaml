<UserControl x:Class="TwinShell.App.Views.HistoryPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:behaviors="clr-namespace:TwinShell.App.Behaviors"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="{StaticResource BackgroundBrush}"
             Focusable="True">
    <!-- UX: Keyboard shortcuts for power users -->
    <UserControl.InputBindings>
        <KeyBinding Key="F5" Command="{Binding RefreshCommand}"/>
        <KeyBinding Key="Delete" Command="{Binding DeleteSelectedCommand}"/>
        <KeyBinding Key="C" Modifiers="Control" Command="{Binding CopySelectedCommand}"/>
    </UserControl.InputBindings>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Command History"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="{StaticResource PrimaryBrush}"/>
            <TextBlock Text="Browse and reuse your command history"
                       FontSize="12"
                       Foreground="{StaticResource TextSecondaryBrush}"/>
        </StackPanel>

        <!-- Search and Filters -->
        <Border Grid.Row="1"
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16"
                Margin="0,0,0,16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Search Box and Actions -->
                <Grid Grid.Row="0" Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBoxStyle}"
                             FontSize="14"
                             TabIndex="1"
                             behaviors:TextBoxPlaceholderBehavior.Placeholder="Search command history..."
                             AutomationProperties.Name="Search command history"
                             AutomationProperties.HelpText="Search for commands in your history by name or command text"/>

                    <!-- UX: Buttons with text-only labels (no emojis) for professionalism -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="12,0,0,0">
                        <Button Content="Refresh"
                                Command="{Binding RefreshCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Margin="0,0,8,0"
                                Padding="12,10"
                                MinWidth="44"
                                MinHeight="44"
                                TabIndex="2"
                                ToolTip="Reload command history from database (F5)"
                                AutomationProperties.Name="Refresh history"
                                AutomationProperties.HelpText="Reload command history from database"/>
                        <Button Content="Clear All"
                                Command="{Binding ClearAllCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Padding="12,10"
                                MinWidth="44"
                                MinHeight="44"
                                TabIndex="3"
                                ToolTip="Delete all command history entries"
                                AutomationProperties.Name="Clear all history"
                                AutomationProperties.HelpText="Delete all command history entries"/>
                    </StackPanel>
                </Grid>

                <!-- Filters -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Date Filter -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,24,0">
                        <TextBlock Text="Date:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"
                                   FontWeight="SemiBold"/>
                        <ComboBox ItemsSource="{Binding DateFilterOptions}"
                                  SelectedItem="{Binding SelectedDateFilter}"
                                  MinWidth="120"
                                  TabIndex="4"
                                  AutomationProperties.Name="Filter by date"
                                  AutomationProperties.HelpText="Filter history entries by date range"/>
                    </StackPanel>

                    <!-- Category Filter -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,24,0">
                        <TextBlock Text="Category:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"
                                   FontWeight="SemiBold"/>
                        <ComboBox ItemsSource="{Binding Categories}"
                                  SelectedItem="{Binding SelectedCategory}"
                                  MinWidth="120"
                                  TabIndex="5"
                                  AutomationProperties.Name="Filter by category"
                                  AutomationProperties.HelpText="Filter history entries by action category"/>
                    </StackPanel>

                    <!-- Platform Filter -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,24,0">
                        <TextBlock Text="Platform:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"
                                   FontWeight="SemiBold"/>
                        <ComboBox SelectedItem="{Binding SelectedPlatform}"
                                  MinWidth="100"
                                  TabIndex="6"
                                  AutomationProperties.Name="Filter by platform"
                                  AutomationProperties.HelpText="Filter history entries by platform">
                            <ComboBox.Items>
                                <ComboBoxItem Content="All" Tag="{x:Null}"/>
                                <ComboBoxItem Content="Windows" Tag="0"/>
                                <ComboBoxItem Content="Linux" Tag="1"/>
                                <ComboBoxItem Content="Both" Tag="2"/>
                            </ComboBox.Items>
                        </ComboBox>
                    </StackPanel>

                    <!-- Clear Filters -->
                    <Button Grid.Column="3"
                            Content="Clear Filters"
                            Command="{Binding ClearFiltersCommand}"
                            HorizontalAlignment="Right"
                            Padding="12,10"
                            MinWidth="44"
                            MinHeight="44"
                            TabIndex="7"
                            AutomationProperties.Name="Clear filters"
                            AutomationProperties.HelpText="Reset all history filters to default values"/>
                </Grid>
            </Grid>
        </Border>

        <!-- History List -->
        <Border Grid.Row="2"
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="8">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top"
                           Text="{Binding TotalCount, StringFormat='History Entries ({0})'}"
                           FontSize="14"
                           FontWeight="Bold"
                           Padding="12"
                           Background="{StaticResource PrimaryBrush}"
                           Foreground="White"/>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding HistoryItems}" Margin="8"
                                  AutomationProperties.Name="History items"
                                  AutomationProperties.HelpText="List of command history entries">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White"
                                        BorderBrush="{StaticResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Margin="0,0,0,8"
                                        Padding="12">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Header -->
                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                <TextBlock Text="{Binding ActionTitle}"
                                                           FontWeight="SemiBold"
                                                           FontSize="14"
                                                           Margin="0,0,8,0"/>
                                                <Border Style="{StaticResource PlatformBadgeStyle}">
                                                    <TextBlock Text="{Binding PlatformDisplay}"
                                                               FontSize="10"
                                                               Foreground="{StaticResource PrimaryBrush}"/>
                                                </Border>
                                            </StackPanel>

                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding RelativeTime}"
                                                       FontSize="11"
                                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                                        </Grid>

                                        <!-- Command -->
                                        <Border Grid.Row="1"
                                                Background="{StaticResource CodeBackgroundBrush}"
                                                BorderBrush="{StaticResource CodeBorderBrush}"
                                                BorderThickness="1"
                                                CornerRadius="4"
                                                Padding="8"
                                                Margin="0,8,0,8">
                                            <TextBlock Text="{Binding GeneratedCommand}"
                                                       FontFamily="Consolas"
                                                       FontSize="12"
                                                       Foreground="{StaticResource CodeTextBrush}"
                                                       TextWrapping="Wrap"/>
                                        </Border>

                                        <!-- UX: Action buttons with text-only labels -->
                                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button Content="Copy"
                                                    Command="{Binding CopyCommand}"
                                                    Style="{StaticResource PrimaryButtonStyle}"
                                                    Padding="12,6"
                                                    Margin="0,0,8,0"
                                                    MinWidth="60"
                                                    ToolTip="Copy command to clipboard"/>
                                            <Button Content="Delete"
                                                    Command="{Binding DeleteCommand}"
                                                    Padding="12,6"
                                                    MinWidth="60"
                                                    Background="{StaticResource DangerBrush}"
                                                    Foreground="White"
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    ToolTip="Delete this history entry">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="4"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Opacity" Value="0.9"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </DockPanel>
        </Border>

        <!-- UX: Empty state when no history exists -->
        <StackPanel Grid.Row="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="{Binding HistoryItems.Count, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Invert}">
            <TextBlock Text="No Command History"
                       FontSize="18"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="0,0,0,8"/>
            <TextBlock FontSize="12"
                       HorizontalAlignment="Center"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       TextAlignment="Center"
                       MaxWidth="400"
                       TextWrapping="Wrap"
                       Margin="0,0,0,16">
                <Run Text="Commands you generate will appear here automatically."/>
                <LineBreak/>
                <Run Text="Go to the Actions tab to start generating commands."/>
            </TextBlock>
        </StackPanel>

        <!-- Status Bar -->
        <Border Grid.Row="3"
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="12"
                Margin="0,16,0,0">
            <TextBlock Text="{Binding StatusMessage}"
                       FontSize="12"
                       Foreground="{StaticResource TextSecondaryBrush}"/>
        </Border>
    </Grid>
</UserControl>
