<Window x:Class="TwinShell.App.Views.CategoryManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:TwinShell.App.ViewModels"
        mc:Ignorable="d"
        Title="Manage Categories - TwinShell"
        Height="650" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}"
        ResizeMode="CanResize"
        MinHeight="500" MinWidth="700">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Manage Categories"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="{StaticResource PrimaryBrush}"/>
            <TextBlock Text="Create and organize custom categories for your actions"
                       FontSize="12"
                       Foreground="{StaticResource TextSecondaryBrush}"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Categories List -->
            <Border Grid.Column="0"
                    Background="{StaticResource SurfaceBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="16"
                    Margin="0,0,16,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- List Header -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,12">
                        <TextBlock Text="Categories"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <Button Content="+ Add New Category"
                                Command="{Binding StartAddCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                HorizontalAlignment="Stretch"
                                Margin="0,8,0,0"/>
                    </StackPanel>

                    <!-- Categories ListBox -->
                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding Categories}"
                             SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                             Background="Transparent"
                             BorderThickness="0"
                             ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource SurfaceBrush}"
                                        BorderBrush="{StaticResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Padding="12"
                                        Margin="0,4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Color Indicator -->
                                        <Border Grid.Column="0"
                                                Width="16"
                                                Height="16"
                                                CornerRadius="8"
                                                Margin="0,0,12,0"
                                                VerticalAlignment="Center">
                                            <Border.Background>
                                                <SolidColorBrush Color="{Binding ColorHex}"/>
                                            </Border.Background>
                                        </Border>

                                        <!-- Category Info -->
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Name}"
                                                       FontWeight="Medium"
                                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                                            <TextBlock FontSize="10"
                                                       Foreground="{StaticResource TextSecondaryBrush}">
                                                <Run Text="{Binding ActionCount, Mode=OneWay}"/>
                                                <Run Text="actions"/>
                                                <Run Text="â€¢"/>
                                                <Run Text="{Binding IconKey}"/>
                                            </TextBlock>
                                        </StackPanel>

                                        <!-- Badges -->
                                        <StackPanel Grid.Column="2"
                                                    Orientation="Horizontal"
                                                    VerticalAlignment="Center">
                                            <Border Background="#FFC107"
                                                    CornerRadius="3"
                                                    Padding="4,2"
                                                    Margin="4,0"
                                                    Visibility="{Binding IsSystemCategory, Converter={StaticResource BoolToVisibilityConverter}}">
                                                <TextBlock Text="System"
                                                           FontSize="9"
                                                           Foreground="White"/>
                                            </Border>
                                            <Border Background="#9E9E9E"
                                                    CornerRadius="3"
                                                    Padding="4,2"
                                                    Visibility="{Binding IsHidden, Converter={StaticResource BoolToVisibilityConverter}}">
                                                <TextBlock Text="Hidden"
                                                           FontSize="9"
                                                           Foreground="White"/>
                                            </Border>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Reorder Buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
                        <Button Content="â†‘ Move Up"
                                Command="{Binding MoveUpCommand}"
                                Padding="8,4"
                                Margin="0,0,8,0"
                                Background="{StaticResource SurfaceBrush}"
                                Foreground="{StaticResource TextPrimaryBrush}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1"/>
                        <Button Content="â†“ Move Down"
                                Command="{Binding MoveDownCommand}"
                                Padding="8,4"
                                Background="{StaticResource SurfaceBrush}"
                                Foreground="{StaticResource TextPrimaryBrush}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Details Panel -->
            <Border Grid.Column="1"
                    Background="{StaticResource SurfaceBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="16">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Add/Edit Form -->
                        <StackPanel Visibility="{Binding IsAddMode, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock Text="Add New Category"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       Margin="0,0,0,16"/>

                            <TextBlock Text="Category Name *"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontWeight="Medium"
                                       Margin="0,8,0,4"/>
                            <TextBox Text="{Binding NewCategoryName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBoxStyle}"/>

                            <TextBlock Text="Icon"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontWeight="Medium"
                                       Margin="0,16,0,4"/>
                            <ComboBox ItemsSource="{Binding AvailableIcons}"
                                      SelectedItem="{Binding NewCategoryIcon, Mode=TwoWay}"
                                      Padding="8"
                                      BorderBrush="{StaticResource BorderBrush}"/>

                            <TextBlock Text="Color"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontWeight="Medium"
                                       Margin="0,16,0,4"/>
                            <ComboBox ItemsSource="{Binding AvailableColors}"
                                      SelectedItem="{Binding NewCategoryColor, Mode=TwoWay}"
                                      Padding="8"
                                      BorderBrush="{StaticResource BorderBrush}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Border Width="16"
                                                    Height="16"
                                                    CornerRadius="8"
                                                    Margin="0,0,8,0">
                                                <Border.Background>
                                                    <SolidColorBrush Color="{Binding}"/>
                                                </Border.Background>
                                            </Border>
                                            <TextBlock Text="{Binding}"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <TextBlock Text="Description (Optional)"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontWeight="Medium"
                                       Margin="0,16,0,4"/>
                            <TextBox Text="{Binding NewCategoryDescription, Mode=TwoWay}"
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     TextWrapping="Wrap"
                                     Height="80"
                                     AcceptsReturn="True"/>

                            <!-- Error Message -->
                            <Border Background="{StaticResource DangerBackgroundBrush}"
                                    BorderBrush="{StaticResource DangerBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="12"
                                    Margin="0,16,0,0"
                                    Visibility="{Binding ErrorMessage, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="{Binding ErrorMessage}"
                                           Foreground="{StaticResource DangerBrush}"
                                           TextWrapping="Wrap"/>
                            </Border>

                            <!-- Action Buttons -->
                            <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                                <Button Content="Save Category"
                                        Command="{Binding SaveNewCommand}"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Margin="0,0,8,0"/>
                                <Button Content="Cancel"
                                        Command="{Binding CancelEditCommand}"
                                        Padding="16,8"
                                        Background="{StaticResource SurfaceBrush}"
                                        Foreground="{StaticResource TextPrimaryBrush}"
                                        BorderBrush="{StaticResource BorderBrush}"
                                        BorderThickness="1"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Selected Category Details -->
                        <StackPanel Visibility="{Binding SelectedCategory, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}">
                                <StackPanel>
                                    <TextBlock Text="Category Details"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource PrimaryBrush}"
                                               Margin="0,0,0,16"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0"
                                                Width="32"
                                                Height="32"
                                                CornerRadius="16"
                                                Margin="0,0,12,0"
                                                VerticalAlignment="Top">
                                            <Border.Background>
                                                <SolidColorBrush Color="{Binding SelectedCategory.ColorHex}"/>
                                            </Border.Background>
                                        </Border>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding SelectedCategory.Name}"
                                                       FontSize="20"
                                                       FontWeight="SemiBold"
                                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                                            <TextBlock Text="{Binding SelectedCategory.Description}"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       TextWrapping="Wrap"
                                                       Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Grid>

                                    <Separator Margin="0,16"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Icon:" FontWeight="Medium" Margin="0,4"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedCategory.IconKey}" Margin="0,4"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Color:" FontWeight="Medium" Margin="0,4"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedCategory.ColorHex}" Margin="0,4"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Actions:" FontWeight="Medium" Margin="0,4"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedCategory.ActionCount}" Margin="0,4"/>

                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Status:" FontWeight="Medium" Margin="0,4"/>
                                        <TextBlock Grid.Row="3" Grid.Column="1" Margin="0,4">
                                            <Run Text="{Binding SelectedCategory.IsHidden, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Hidden:Visible}"/>
                                        </TextBlock>
                                    </Grid>

                                    <!-- Action Buttons -->
                                    <StackPanel Margin="0,24,0,0">
                                        <Button Content="Edit Category"
                                                Command="{Binding StartEditCommand}"
                                                Style="{StaticResource PrimaryButtonStyle}"
                                                HorizontalAlignment="Stretch"
                                                Margin="0,0,0,8"/>
                                        <Button Content="{Binding SelectedCategory.IsHidden, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter='Show:Hide'}"
                                                Command="{Binding ToggleVisibilityCommand}"
                                                Padding="16,8"
                                                HorizontalAlignment="Stretch"
                                                Background="{StaticResource SurfaceBrush}"
                                                Foreground="{StaticResource TextPrimaryBrush}"
                                                BorderBrush="{StaticResource BorderBrush}"
                                                BorderThickness="1"
                                                Margin="0,0,0,8"/>
                                        <Button Content="Delete Category"
                                                Command="{Binding DeleteCommand}"
                                                Padding="16,8"
                                                HorizontalAlignment="Stretch"
                                                Background="{StaticResource DangerBrush}"
                                                Foreground="White"
                                                BorderThickness="0"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <!-- Empty State -->
                        <StackPanel VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Margin="0,40,0,0">
                            <StackPanel.Visibility>
                                <MultiBinding Converter="{StaticResource BoolToVisibilityConverter}">
                                    <Binding Path="IsAddMode"/>
                                    <Binding Path="SelectedCategory"/>
                                </MultiBinding>
                            </StackPanel.Visibility>
                            <TextBlock Text="ðŸ“"
                                       FontSize="48"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,16"/>
                            <TextBlock Text="Select a category or create a new one"
                                       FontSize="14"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="0,16,0,0"
                Margin="0,16,0,0">
            <Button Content="Close"
                    Click="Close_Click"
                    Padding="16,8"
                    HorizontalAlignment="Right"
                    Background="{StaticResource SurfaceBrush}"
                    Foreground="{StaticResource TextPrimaryBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"/>
        </Border>
    </Grid>
</Window>
