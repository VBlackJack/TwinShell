<Window x:Class="TwinShell.App.Views.CategoryManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:TwinShell.App.ViewModels"
        mc:Ignorable="d"
        Title="Manage Categories - TwinShell"
        Height="650" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}"
        ResizeMode="CanResize"
        MinHeight="500" MinWidth="700">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- UX: Main Content with cleaner layout (removed redundant header) -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Categories List -->
            <Border Grid.Column="0"
                    Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="16"
                    Margin="0,0,16,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- UX: List Header with cleaner button label -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,12">
                        <TextBlock Text="Categories"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <Button Content="Add New Category"
                                Command="{Binding StartAddCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                HorizontalAlignment="Stretch"
                                Padding="12,10"
                                MinWidth="44"
                                MinHeight="44"
                                Margin="0,8,0,0"
                                ToolTip="Create a new custom category"
                                AutomationProperties.Name="Add new category"
                                AutomationProperties.HelpText="Create a new custom category for organizing actions"/>
                    </StackPanel>

                    <!-- Categories ListBox -->
                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding Categories}"
                             SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                             Background="Transparent"
                             BorderThickness="0"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             TabIndex="1"
                             AutomationProperties.Name="Categories list"
                             AutomationProperties.HelpText="List of all categories. Select one to view details or edit.">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource SurfaceBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Padding="12"
                                        Margin="0,4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Color Indicator -->
                                        <Border Grid.Column="0"
                                                Width="16"
                                                Height="16"
                                                CornerRadius="8"
                                                Margin="0,0,12,0"
                                                VerticalAlignment="Center">
                                            <Border.Background>
                                                <SolidColorBrush Color="{Binding ColorHex}"/>
                                            </Border.Background>
                                        </Border>

                                        <!-- Category Info -->
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Name}"
                                                       FontWeight="Medium"
                                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                                            <TextBlock FontSize="10"
                                                       Foreground="{DynamicResource TextSecondaryBrush}">
                                                <Run Text="{Binding ActionCount, Mode=OneWay}"/>
                                                <Run Text="actions"/>
                                                <Run Text="â€¢"/>
                                                <Run Text="{Binding IconKey}"/>
                                            </TextBlock>
                                        </StackPanel>

                                        <!-- Badges -->
                                        <StackPanel Grid.Column="2"
                                                    Orientation="Horizontal"
                                                    VerticalAlignment="Center">
                                            <Border Background="#FFC107"
                                                    CornerRadius="3"
                                                    Padding="4,2"
                                                    Margin="4,0"
                                                    Visibility="{Binding IsSystemCategory, Converter={StaticResource BoolToVisibilityConverter}}">
                                                <TextBlock Text="System"
                                                           FontSize="9"
                                                           Foreground="White"/>
                                            </Border>
                                            <Border Background="#9E9E9E"
                                                    CornerRadius="3"
                                                    Padding="4,2"
                                                    Visibility="{Binding IsHidden, Converter={StaticResource BoolToVisibilityConverter}}">
                                                <TextBlock Text="Hidden"
                                                           FontSize="9"
                                                           Foreground="White"/>
                                            </Border>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Reorder Buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
                        <Button Content="â†‘ Move Up"
                                Command="{Binding MoveUpCommand}"
                                Padding="10,10"
                                MinWidth="44"
                                MinHeight="44"
                                Margin="0,0,8,0"
                                Background="{DynamicResource SurfaceBrush}"
                                Foreground="{DynamicResource TextPrimaryBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                Cursor="Hand"
                                ToolTip="Move the selected category up in the list"
                                AutomationProperties.Name="Move category up"
                                AutomationProperties.HelpText="Move the selected category up in the display order">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="4"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Content="â†“ Move Down"
                                Command="{Binding MoveDownCommand}"
                                Padding="10,10"
                                MinWidth="44"
                                MinHeight="44"
                                Background="{DynamicResource SurfaceBrush}"
                                Foreground="{DynamicResource TextPrimaryBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                Cursor="Hand"
                                ToolTip="Move the selected category down in the list"
                                AutomationProperties.Name="Move category down"
                                AutomationProperties.HelpText="Move the selected category down in the display order">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="4"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Details Panel -->
            <Border Grid.Column="1"
                    Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="16">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Add/Edit Form -->
                        <StackPanel Visibility="{Binding IsAddMode, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock Text="Add New Category"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource PrimaryBrush}"
                                       Margin="0,0,0,16"/>

                            <TextBlock Text="Category Name *"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       FontWeight="Medium"
                                       Margin="0,8,0,4"/>
                            <TextBox x:Name="CategoryNameTextBox"
                                     Text="{Binding NewCategoryName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     TabIndex="2"
                                     AutomationProperties.Name="Category name"
                                     AutomationProperties.HelpText="Enter a unique name for the category"/>

                            <TextBlock Text="Icon"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       FontWeight="Medium"
                                       Margin="0,16,0,4"/>
                            <ComboBox ItemsSource="{Binding AvailableIcons}"
                                      SelectedItem="{Binding NewCategoryIcon, Mode=TwoWay}"
                                      Padding="8"
                                      BorderBrush="{DynamicResource BorderBrush}"
                                      TabIndex="3"
                                      AutomationProperties.Name="Category icon"
                                      AutomationProperties.HelpText="Select an icon for the category"/>

                            <TextBlock Text="Color"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       FontWeight="Medium"
                                       Margin="0,16,0,4"/>
                            <ComboBox ItemsSource="{Binding AvailableColors}"
                                      SelectedItem="{Binding NewCategoryColor, Mode=TwoWay}"
                                      Padding="8"
                                      BorderBrush="{DynamicResource BorderBrush}"
                                      TabIndex="4"
                                      AutomationProperties.Name="Category color"
                                      AutomationProperties.HelpText="Select a color for the category">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Border Width="16"
                                                    Height="16"
                                                    CornerRadius="8"
                                                    Margin="0,0,8,0">
                                                <Border.Background>
                                                    <SolidColorBrush Color="{Binding}"/>
                                                </Border.Background>
                                            </Border>
                                            <TextBlock Text="{Binding}"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <TextBlock Text="Description (Optional)"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       FontWeight="Medium"
                                       Margin="0,16,0,4"/>
                            <TextBox Text="{Binding NewCategoryDescription, Mode=TwoWay}"
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     TextWrapping="Wrap"
                                     Height="80"
                                     AcceptsReturn="True"
                                     TabIndex="5"
                                     AutomationProperties.Name="Category description"
                                     AutomationProperties.HelpText="Optional description for the category"/>

                            <!-- Error Message -->
                            <Border Background="{DynamicResource DangerBackgroundBrush}"
                                    BorderBrush="{DynamicResource DangerBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="12"
                                    Margin="0,16,0,0"
                                    Visibility="{Binding ErrorMessage, Converter={StaticResource BoolToVisibilityConverter}}"
                                    AutomationProperties.LiveSetting="Assertive"
                                    AutomationProperties.Name="Error message">
                                <TextBlock Text="{Binding ErrorMessage}"
                                           Foreground="{DynamicResource DangerBrush}"
                                           TextWrapping="Wrap"/>
                            </Border>

                            <!-- Action Buttons -->
                            <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                                <Button Content="Save Category"
                                        Command="{Binding SaveNewCommand}"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Margin="0,0,8,0"
                                        Padding="12,10"
                                        MinWidth="44"
                                        MinHeight="44"
                                        TabIndex="6"
                                        AutomationProperties.Name="Save category"
                                        AutomationProperties.HelpText="Save the new category"/>
                                <Button Content="Cancel"
                                        Command="{Binding CancelEditCommand}"
                                        Padding="12,10"
                                        MinWidth="44"
                                        MinHeight="44"
                                        TabIndex="7"
                                        Background="{DynamicResource SurfaceBrush}"
                                        Foreground="{DynamicResource TextPrimaryBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        AutomationProperties.Name="Cancel"
                                        AutomationProperties.HelpText="Cancel editing and return to list"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Selected Category Details -->
                        <StackPanel Visibility="{Binding SelectedCategory, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}">
                                <StackPanel>
                                    <TextBlock Text="Category Details"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource PrimaryBrush}"
                                               Margin="0,0,0,16"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0"
                                                Width="32"
                                                Height="32"
                                                CornerRadius="16"
                                                Margin="0,0,12,0"
                                                VerticalAlignment="Top">
                                            <Border.Background>
                                                <SolidColorBrush Color="{Binding SelectedCategory.ColorHex}"/>
                                            </Border.Background>
                                        </Border>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding SelectedCategory.Name}"
                                                       FontSize="20"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                                            <TextBlock Text="{Binding SelectedCategory.Description}"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                       TextWrapping="Wrap"
                                                       Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Grid>

                                    <Separator Margin="0,16"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Icon:" FontWeight="Medium" Margin="0,4"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedCategory.IconKey}" Margin="0,4"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Color:" FontWeight="Medium" Margin="0,4"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedCategory.ColorHex}" Margin="0,4"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Actions:" FontWeight="Medium" Margin="0,4"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedCategory.ActionCount}" Margin="0,4"/>

                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Status:" FontWeight="Medium" Margin="0,4"/>
                                        <TextBlock Grid.Row="3" Grid.Column="1" Margin="0,4">
                                            <Run Text="{Binding SelectedCategory.IsHidden, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Hidden:Visible}"/>
                                        </TextBlock>
                                    </Grid>

                                    <!-- Action Buttons -->
                                    <StackPanel Margin="0,24,0,0">
                                        <Button Content="Edit Category"
                                                Command="{Binding StartEditCommand}"
                                                Style="{StaticResource PrimaryButtonStyle}"
                                                HorizontalAlignment="Stretch"
                                                Padding="12,10"
                                                MinWidth="44"
                                                MinHeight="44"
                                                Margin="0,0,0,8"
                                                ToolTip="Edit category properties"
                                                AutomationProperties.Name="Edit category"
                                                AutomationProperties.HelpText="Edit the selected category's name, icon, color, and description"/>
                                        <Button Content="{Binding SelectedCategory.IsHidden, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter='Show:Hide'}"
                                                Command="{Binding ToggleVisibilityCommand}"
                                                Padding="12,10"
                                                MinWidth="44"
                                                MinHeight="44"
                                                HorizontalAlignment="Stretch"
                                                Background="{DynamicResource SurfaceBrush}"
                                                Foreground="{DynamicResource TextPrimaryBrush}"
                                                BorderBrush="{DynamicResource BorderBrush}"
                                                BorderThickness="1"
                                                Cursor="Hand"
                                                Margin="0,0,0,8"
                                                ToolTip="Toggle category visibility"
                                                AutomationProperties.Name="Toggle visibility"
                                                AutomationProperties.HelpText="Show or hide this category in the main view">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="4"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        <Button Content="Delete Category"
                                                Command="{Binding DeleteCommand}"
                                                Padding="12,10"
                                                MinWidth="44"
                                                MinHeight="44"
                                                HorizontalAlignment="Stretch"
                                                Background="{DynamicResource DangerBrush}"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                ToolTip="Delete this category permanently"
                                                AutomationProperties.Name="Delete category"
                                                AutomationProperties.HelpText="Permanently delete the selected category">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="4"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Opacity" Value="0.9"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <!-- UX: Enhanced empty state with icon and better guidance -->
                        <StackPanel VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Margin="0,60,0,0">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsAddMode}" Value="False"/>
                                                <Condition Binding="{Binding SelectedCategory}" Value="{x:Null}"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <TextBlock Text="ðŸ·ï¸"
                                       FontSize="64"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,16"
                                       Opacity="0.3"/>
                            <TextBlock Text="No Category Selected"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       Margin="0,0,0,12"/>
                            <TextBlock FontSize="12"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center"
                                       TextAlignment="Center"
                                       MaxWidth="350"
                                       TextWrapping="Wrap"
                                       LineHeight="18">
                                <Run Text="Select a category from the list to view its details,"/>
                                <LineBreak/>
                                <Run Text="or click "/>
                                <Run Text="Add New Category" FontWeight="Bold" Foreground="{DynamicResource PrimaryBrush}"/>
                                <Run Text=" to create one."/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="1"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="0,16,0,0"
                Margin="0,16,0,0">
            <Button Content="Close"
                    Click="Close_Click"
                    Padding="12,10"
                    MinWidth="44"
                    MinHeight="44"
                    HorizontalAlignment="Right"
                    Background="{DynamicResource SurfaceBrush}"
                    Foreground="{DynamicResource TextPrimaryBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    Cursor="Hand"
                    ToolTip="Close this window"
                    AutomationProperties.Name="Close"
                    AutomationProperties.HelpText="Close the category management window">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Border>
    </Grid>
</Window>
