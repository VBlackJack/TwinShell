<UserControl x:Class="TwinShell.App.Views.PowerShellGalleryPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="PowerShell Gallery" FontSize="20" FontWeight="Bold"/>
            <TextBlock Text="Search and import PowerShell modules and cmdlets" FontSize="12" Opacity="0.7" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Search -->
        <GroupBox Grid.Row="1" Header="Search" Margin="0,0,0,10">
            <StackPanel>
                <!-- UX: Search box with text-only button -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBox Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                             Width="300" Margin="0,0,12,0"
                             IsEnabled="{Binding IsSearching, Converter={StaticResource InverseBooleanConverter}}"/>
                    <Button Content="Search" Command="{Binding SearchModulesCommand}" MinWidth="100" MinHeight="32"/>
                </StackPanel>
                <TextBlock Text="{Binding StatusMessage}" Opacity="0.7" FontSize="11"/>
            </StackPanel>
        </GroupBox>

        <!-- Results -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Modules List -->
            <GroupBox Grid.Column="0" Header="Modules">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ListBox Grid.Row="0" ItemsSource="{Binding Modules}" SelectedItem="{Binding SelectedModule}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="5">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                        <TextBlock Text=" " Width="5"/>
                                        <TextBlock Text="{Binding Version}" FontSize="10" Opacity="0.6" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding Description}"
                                             TextWrapping="Wrap"
                                             Opacity="0.7"
                                             FontSize="11"
                                             Margin="0,2,0,0"
                                             MaxHeight="40"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                        <TextBlock Text="{Binding Author}" FontSize="10" Opacity="0.5"/>
                                        <TextBlock Text=" | " FontSize="10" Opacity="0.5" Margin="5,0"/>
                                        <TextBlock Text="{Binding DownloadCount, StringFormat='Downloads: {0:N0}'}" FontSize="10" Opacity="0.5"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- UX: Consistent button styling -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,0">
                        <Button Content="Install Module" Command="{Binding InstallModuleCommand}" MinWidth="100" Margin="0,0,8,0" MinHeight="32"/>
                        <Button Content="Load Commands" Command="{Binding LoadModuleCommandsCommand}" MinWidth="100" MinHeight="32"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch"/>

            <!-- Commands List -->
            <GroupBox Grid.Column="2" Header="Commands">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ListBox Grid.Row="0" ItemsSource="{Binding Commands}" SelectedItem="{Binding SelectedCommand}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="5">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Synopsis}"
                                             TextWrapping="Wrap"
                                             Opacity="0.7"
                                             FontSize="11"
                                             Margin="0,2,0,0"/>
                                    <TextBlock Text="{Binding CommandType}" FontSize="10" Opacity="0.5" Margin="0,2,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- UX: Import button with text-only label -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,0">
                        <Button Content="Import as Action" Command="{Binding ImportCommandAsActionCommand}" MinWidth="120" MinHeight="32"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Progress Indicator -->
        <StackPanel Grid.Row="3" Margin="0,10,0,0" Visibility="{Binding IsInstalling, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ProgressBar IsIndeterminate="True" Height="4"/>
            <TextBlock Text="Installing module... This may take a few minutes."
                     HorizontalAlignment="Center"
                     Margin="0,5,0,0"
                     FontSize="11"
                     Opacity="0.7"/>
        </StackPanel>
    </Grid>
</UserControl>
