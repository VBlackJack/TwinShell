<Window x:Class="TwinShell.App.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:TwinShell.App.ViewModels"
        xmlns:enums="clr-namespace:TwinShell.Core.Enums;assembly=TwinShell.Core"
        mc:Ignorable="d"
        Title="Settings - TwinShell"
        Height="600" Width="700"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- ComboBox Style -->
        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        </Style>

        <!-- TextBox for numbers -->
        <Style x:Key="NumberTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource ModernTextBoxStyle}">
            <Setter Property="Width" Value="100"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <!-- CheckBox Style -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Margin" Value="0,4"/>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Margin" Value="0,16,0,8"/>
        </Style>

        <!-- Label Style -->
        <Style x:Key="SettingsLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <!-- Description Style -->
        <Style x:Key="DescriptionStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Settings"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="{StaticResource PrimaryBrush}"/>
            <TextBlock Text="Configure your TwinShell preferences"
                       FontSize="12"
                       Foreground="{StaticResource TextSecondaryBrush}"/>
        </StackPanel>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Appearance Section -->
                <TextBlock Text="Appearance" Style="{StaticResource SectionHeaderStyle}"/>
                <Border Background="{StaticResource SurfaceBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="16"
                        Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Theme" Style="{StaticResource SettingsLabelStyle}"/>
                        <TextBlock Text="Choose your preferred color theme. System theme follows your Windows settings."
                                   Style="{StaticResource DescriptionStyle}"/>
                        <ComboBox SelectedItem="{Binding SelectedTheme, Mode=TwoWay}"
                                  SelectionChanged="ThemeComboBox_SelectionChanged"
                                  TabIndex="1"
                                  AutomationProperties.Name="Theme selection"
                                  AutomationProperties.HelpText="Choose your preferred color theme: Light, Dark, or System">
                            <ComboBox.ItemsSource>
                                <x:Array Type="{x:Type enums:Theme}">
                                    <enums:Theme>Light</enums:Theme>
                                    <enums:Theme>Dark</enums:Theme>
                                    <enums:Theme>System</enums:Theme>
                                </x:Array>
                            </ComboBox.ItemsSource>
                        </ComboBox>

                        <Button Content="Preview Theme"
                                Command="{Binding PreviewThemeCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                HorizontalAlignment="Left"
                                Padding="12,10"
                                MinWidth="44"
                                MinHeight="44"
                                Margin="0,12,0,0"
                                ToolTip="Preview the selected theme"
                                AutomationProperties.Name="Preview theme"
                                AutomationProperties.HelpText="Preview how the selected theme will look"/>
                    </StackPanel>
                </Border>

                <!-- Behavior Section -->
                <TextBlock Text="Behavior" Style="{StaticResource SectionHeaderStyle}"/>
                <Border Background="{StaticResource SurfaceBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="16"
                        Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Command History Retention"
                                   Style="{StaticResource SettingsLabelStyle}"/>
                        <TextBlock Text="Number of days to keep command history (1-3650 days)."
                                   Style="{StaticResource DescriptionStyle}"/>
                        <TextBox x:Name="AutoCleanupDaysTextBox"
                                 Text="{Binding AutoCleanupDays, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource NumberTextBoxStyle}"
                                 TabIndex="2"
                                 AutomationProperties.Name="Command history retention days"
                                 AutomationProperties.HelpText="Number of days to keep command history, between 1 and 3650 days"/>

                        <TextBlock Text="Maximum History Items"
                                   Style="{StaticResource SettingsLabelStyle}"
                                   Margin="0,16,0,4"/>
                        <TextBlock Text="Maximum number of items to display in history views (10-100,000)."
                                   Style="{StaticResource DescriptionStyle}"/>
                        <TextBox x:Name="MaxHistoryItemsTextBox"
                                 Text="{Binding MaxHistoryItems, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource NumberTextBoxStyle}"
                                 TabIndex="3"
                                 AutomationProperties.Name="Maximum history items"
                                 AutomationProperties.HelpText="Maximum number of items to display in history views, between 10 and 100000"/>

                        <CheckBox Content="Confirm before executing dangerous commands"
                                  IsChecked="{Binding ConfirmDangerousActions, Mode=TwoWay}"
                                  Margin="0,16,0,0"
                                  TabIndex="4"
                                  AutomationProperties.Name="Confirm before executing dangerous commands"/>
                    </StackPanel>
                </Border>

                <!-- Validation Error Display -->
                <Border Background="{StaticResource DangerBackgroundBrush}"
                        BorderBrush="{StaticResource DangerBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="12"
                        Margin="0,0,0,16"
                        Visibility="{Binding ValidationError, Converter={StaticResource BoolToVisibilityConverter}}"
                        AutomationProperties.LiveSetting="Assertive"
                        AutomationProperties.Name="Validation error">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âš  "
                                   FontSize="16"
                                   Foreground="{StaticResource DangerBrush}"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding ValidationError}"
                                   Foreground="{StaticResource DangerBrush}"
                                   TextWrapping="Wrap"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Grid Grid.Row="2" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="Reset to Defaults"
                    Command="{Binding ResetToDefaultCommand}"
                    Padding="12,10"
                    MinWidth="44"
                    MinHeight="44"
                    Margin="0,0,8,0"
                    TabIndex="7"
                    Background="{StaticResource DangerBrush}"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    ToolTip="Reset all settings to default values"
                    AutomationProperties.Name="Reset to defaults"
                    AutomationProperties.HelpText="Reset all settings to their default values">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Grid.Column="2"
                    Content="Save"
                    Command="{Binding SaveCommand}"
                    Style="{StaticResource PrimaryButtonStyle}"
                    IsEnabled="{Binding HasChanges}"
                    Margin="0,0,8,0"
                    Padding="12,10"
                    MinWidth="44"
                    MinHeight="44"
                    TabIndex="5"
                    AutomationProperties.Name="Save settings"
                    AutomationProperties.HelpText="Save your changes and close the settings window"/>

            <Button Grid.Column="3"
                    Content="Cancel"
                    Command="{Binding CancelCommand}"
                    Click="Cancel_Click"
                    Padding="12,10"
                    MinWidth="44"
                    MinHeight="44"
                    TabIndex="6"
                    Background="{StaticResource SurfaceBrush}"
                    Foreground="{StaticResource TextPrimaryBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    Cursor="Hand"
                    AutomationProperties.Name="Cancel"
                    AutomationProperties.HelpText="Close settings without saving changes">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource HoverBackgroundBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Grid>
</Window>
