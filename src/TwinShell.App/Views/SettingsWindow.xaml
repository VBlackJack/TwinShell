<Window x:Class="TwinShell.App.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:TwinShell.App.ViewModels"
        xmlns:enums="clr-namespace:TwinShell.Core.Enums;assembly=TwinShell.Core"
        mc:Ignorable="d"
        Title="Settings - TwinShell"
        Height="600" Width="700"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}"
        ResizeMode="CanResize"
        MinHeight="450" MinWidth="600">

    <Window.Resources>
        <!-- ComboBox Style -->
        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        </Style>

        <!-- TextBox for numbers -->
        <Style x:Key="NumberTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource ModernTextBoxStyle}">
            <Setter Property="Width" Value="100"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <!-- CheckBox Style -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="Margin" Value="0,4"/>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="Margin" Value="0,16,0,8"/>
        </Style>

        <!-- Label Style -->
        <Style x:Key="SettingsLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <!-- Description Style -->
        <Style x:Key="DescriptionStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- UX: Settings Content with cleaner layout (removed redundant header) -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Appearance Section -->
                <TextBlock Text="Appearance" Style="{StaticResource SectionHeaderStyle}"/>
                <Border Background="{DynamicResource SurfaceBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="16"
                        Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Theme" Style="{StaticResource SettingsLabelStyle}"/>
                        <TextBlock Text="Choose your preferred color theme. System theme follows your Windows settings."
                                   Style="{StaticResource DescriptionStyle}"/>
                        <ComboBox SelectedItem="{Binding SelectedTheme, Mode=TwoWay}"
                                  SelectionChanged="ThemeComboBox_SelectionChanged"
                                  TabIndex="1"
                                  AutomationProperties.Name="Theme selection"
                                  AutomationProperties.HelpText="Choose your preferred color theme: Light, Dark, or System">
                            <ComboBox.ItemsSource>
                                <x:Array Type="{x:Type enums:Theme}">
                                    <enums:Theme>Light</enums:Theme>
                                    <enums:Theme>Dark</enums:Theme>
                                    <enums:Theme>System</enums:Theme>
                                </x:Array>
                            </ComboBox.ItemsSource>
                        </ComboBox>

                        <Button Content="Preview Theme"
                                Command="{Binding PreviewThemeCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                HorizontalAlignment="Left"
                                Padding="12,10"
                                MinWidth="44"
                                MinHeight="44"
                                Margin="0,12,0,0"
                                ToolTip="Preview the selected theme"
                                AutomationProperties.Name="Preview theme"
                                AutomationProperties.HelpText="Preview how the selected theme will look"/>
                    </StackPanel>
                </Border>

                <!-- Behavior Section -->
                <TextBlock Text="Behavior" Style="{StaticResource SectionHeaderStyle}"/>
                <Border Background="{DynamicResource SurfaceBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="16"
                        Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Command History Retention"
                                   Style="{StaticResource SettingsLabelStyle}"/>
                        <TextBlock Text="Number of days to keep command history (1-3650 days)."
                                   Style="{StaticResource DescriptionStyle}"/>
                        <TextBox x:Name="AutoCleanupDaysTextBox"
                                 Text="{Binding AutoCleanupDays, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource NumberTextBoxStyle}"
                                 TabIndex="2"
                                 AutomationProperties.Name="Command history retention days"
                                 AutomationProperties.HelpText="Number of days to keep command history, between 1 and 3650 days"/>

                        <TextBlock Text="Maximum History Items"
                                   Style="{StaticResource SettingsLabelStyle}"
                                   Margin="0,16,0,4"/>
                        <TextBlock Text="Maximum number of items to display in history views (10-100,000)."
                                   Style="{StaticResource DescriptionStyle}"/>
                        <TextBox x:Name="MaxHistoryItemsTextBox"
                                 Text="{Binding MaxHistoryItems, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource NumberTextBoxStyle}"
                                 TabIndex="3"
                                 AutomationProperties.Name="Maximum history items"
                                 AutomationProperties.HelpText="Maximum number of items to display in history views, between 10 and 100000"/>

                        <CheckBox Content="Confirm before executing dangerous commands"
                                  IsChecked="{Binding ConfirmDangerousActions, Mode=TwoWay}"
                                  Margin="0,16,0,0"
                                  TabIndex="4"
                                  AutomationProperties.Name="Confirm before executing dangerous commands"/>
                    </StackPanel>
                </Border>

                <!-- Git Repository Configuration Section -->
                <TextBlock Text="Git Repository Configuration" Style="{StaticResource SectionHeaderStyle}"/>
                <Border Background="{DynamicResource SurfaceBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="16"
                        Margin="0,0,0,16">
                    <StackPanel>
                        <!-- Remote URL -->
                        <TextBlock Text="Remote Repository URL" Style="{StaticResource SettingsLabelStyle}"/>
                        <TextBlock Text="Git remote URL (HTTPS or SSH format)"
                                   Style="{StaticResource DescriptionStyle}"/>
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0"
                                     Text="{Binding GitRemoteUrl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     TabIndex="10"
                                     AutomationProperties.Name="Git remote URL"/>
                            <Button Grid.Column="1"
                                    Content="Test"
                                    Command="{Binding TestGitConnectionCommand}"
                                    Padding="12,8"
                                    MinWidth="70"
                                    Margin="8,0,0,0"
                                    Background="{DynamicResource SurfaceBrush}"
                                    Foreground="{DynamicResource TextPrimaryBrush}"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1"
                                    Cursor="Hand"
                                    TabIndex="11"
                                    ToolTip="Test connection to remote repository"
                                    AutomationProperties.Name="Test connection">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="4"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>

                        <!-- Local Path -->
                        <TextBlock Text="Local Repository Path" Style="{StaticResource SettingsLabelStyle}"/>
                        <TextBlock Text="Local folder where the repository will be cloned/synced"
                                   Style="{StaticResource DescriptionStyle}"/>
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0"
                                     Text="{Binding GitRepositoryPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     IsReadOnly="True"
                                     TabIndex="12"
                                     AutomationProperties.Name="Git repository path"/>
                            <Button Grid.Column="1"
                                    Content="Browse..."
                                    Command="{Binding BrowseGitRepositoryCommand}"
                                    Padding="12,8"
                                    MinWidth="80"
                                    Margin="8,0,0,0"
                                    Background="{DynamicResource SurfaceBrush}"
                                    Foreground="{DynamicResource TextPrimaryBrush}"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1"
                                    Cursor="Hand"
                                    TabIndex="13"
                                    AutomationProperties.Name="Browse for folder">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="4"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>

                        <!-- Branch -->
                        <TextBlock Text="Branch" Style="{StaticResource SettingsLabelStyle}"/>
                        <ComboBox IsEditable="True"
                                  Text="{Binding GitBranch, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  ItemsSource="{Binding CommonBranches}"
                                  Width="200"
                                  HorizontalAlignment="Left"
                                  Margin="0,0,0,12"
                                  TabIndex="14"
                                  AutomationProperties.Name="Git branch"/>

                        <!-- Authentication -->
                        <TextBlock Text="Authentication Method" Style="{StaticResource SettingsLabelStyle}"/>
                        <ComboBox SelectedItem="{Binding GitAuthMethod, Mode=TwoWay}"
                                  ItemsSource="{Binding AuthMethods}"
                                  Width="200"
                                  HorizontalAlignment="Left"
                                  Margin="0,0,0,12"
                                  TabIndex="15"
                                  AutomationProperties.Name="Authentication method"/>

                        <!-- Access Token (for HTTPS) -->
                        <TextBlock Text="Access Token (for HTTPS)" Style="{StaticResource SettingsLabelStyle}"/>
                        <TextBlock Text="Personal access token or password for HTTPS authentication"
                                   Style="{StaticResource DescriptionStyle}"/>
                        <PasswordBox x:Name="GitAccessTokenBox"
                                     Width="350"
                                     HorizontalAlignment="Left"
                                     Margin="0,0,0,12"
                                     TabIndex="16"
                                     PasswordChanged="GitAccessTokenBox_PasswordChanged"
                                     AutomationProperties.Name="Git access token"/>

                        <!-- User Info -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Git User Name" Style="{StaticResource SettingsLabelStyle}"/>
                                <TextBox Text="{Binding GitUserName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource ModernTextBoxStyle}"
                                         TabIndex="17"
                                         AutomationProperties.Name="Git user name"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Git User Email" Style="{StaticResource SettingsLabelStyle}"/>
                                <TextBox Text="{Binding GitUserEmail, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource ModernTextBoxStyle}"
                                         TabIndex="18"
                                         AutomationProperties.Name="Git user email"/>
                            </StackPanel>
                        </Grid>

                        <!-- Sync Options -->
                        <CheckBox Content="Sync automatically on startup"
                                  IsChecked="{Binding GitSyncOnStartup, Mode=TwoWay}"
                                  Margin="0,8,0,0"
                                  TabIndex="19"
                                  AutomationProperties.Name="Sync on startup"/>
                        <CheckBox Content="Auto-push changes after sync"
                                  IsChecked="{Binding GitAutoPush, Mode=TwoWay}"
                                  Margin="0,4,0,0"
                                  TabIndex="20"
                                  AutomationProperties.Name="Auto push changes"/>

                        <!-- Repository Status -->
                        <Border Background="{DynamicResource BackgroundBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="12"
                                Margin="0,16,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Status: "
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding GitRepositoryStatus}"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Initialize Button -->
                        <Button Content="Initialize Repository"
                                Command="{Binding InitializeGitRepositoryCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Padding="16,10"
                                MinWidth="160"
                                MinHeight="44"
                                HorizontalAlignment="Left"
                                Margin="0,16,0,0"
                                TabIndex="21"
                                ToolTip="Clone the remote repository to the local path"
                                AutomationProperties.Name="Initialize repository"/>
                    </StackPanel>
                </Border>

                <!-- Synchronization Actions Section -->
                <TextBlock Text="Synchronization Actions" Style="{StaticResource SectionHeaderStyle}"/>
                <Border Background="{DynamicResource SurfaceBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="16"
                        Margin="0,0,0,16">
                    <StackPanel>
                        <!-- Git Sync Actions -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <Button Content="Pull"
                                    Command="{Binding GitPullCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Padding="16,10"
                                    MinWidth="100"
                                    MinHeight="44"
                                    Margin="0,0,12,0"
                                    TabIndex="22"
                                    ToolTip="Pull changes from remote and import into database"
                                    AutomationProperties.Name="Git Pull"/>

                            <Button Content="Push"
                                    Command="{Binding GitPushCommand}"
                                    Padding="16,10"
                                    MinWidth="100"
                                    MinHeight="44"
                                    Margin="0,0,12,0"
                                    TabIndex="23"
                                    Background="{DynamicResource SurfaceBrush}"
                                    Foreground="{DynamicResource TextPrimaryBrush}"
                                    BorderBrush="{DynamicResource PrimaryBrush}"
                                    BorderThickness="1"
                                    Cursor="Hand"
                                    ToolTip="Export database to YAML and push to remote"
                                    AutomationProperties.Name="Git Push">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="4"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button Content="Full Sync"
                                    Command="{Binding GitFullSyncCommand}"
                                    Padding="16,10"
                                    MinWidth="120"
                                    MinHeight="44"
                                    TabIndex="24"
                                    Background="{DynamicResource SuccessBrush}"
                                    Foreground="{DynamicResource TextOnPrimaryBrush}"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    ToolTip="Pull, import, export, and push (if enabled)"
                                    AutomationProperties.Name="Full Sync">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>

                        <!-- Manual JSON Actions -->
                        <TextBlock Text="Manual JSON Operations"
                                   Style="{StaticResource SettingsLabelStyle}"
                                   Margin="0,8,0,4"/>
                        <StackPanel Orientation="Horizontal">
                            <Button Content="Export to JSON"
                                    Command="{Binding ExportToYamlCommand}"
                                    Padding="16,10"
                                    MinWidth="140"
                                    MinHeight="44"
                                    Margin="0,0,12,0"
                                    TabIndex="25"
                                    Background="{DynamicResource SurfaceBrush}"
                                    Foreground="{DynamicResource TextPrimaryBrush}"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1"
                                    Cursor="Hand"
                                    ToolTip="Export all data to JSON files without Git operations"
                                    AutomationProperties.Name="Export to JSON">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="4"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button Content="Import from JSON"
                                    Command="{Binding ImportFromYamlCommand}"
                                    Padding="16,10"
                                    MinWidth="140"
                                    MinHeight="44"
                                    TabIndex="26"
                                    Background="{DynamicResource SurfaceBrush}"
                                    Foreground="{DynamicResource TextPrimaryBrush}"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1"
                                    Cursor="Hand"
                                    ToolTip="Import data from JSON files without Git operations"
                                    AutomationProperties.Name="Import from JSON">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="4"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>

                        <!-- Sync Status -->
                        <TextBlock Text="{Binding SyncStatusMessage}"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   FontStyle="Italic"
                                   Margin="0,12,0,0"
                                   Visibility="{Binding SyncStatusMessage, Converter={StaticResource NullToVisibilityConverter}}"/>
                    </StackPanel>
                </Border>

                <!-- Validation Error Display -->
                <Border Background="{DynamicResource DangerBackgroundBrush}"
                        BorderBrush="{DynamicResource DangerBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="12"
                        Margin="0,0,0,16"
                        Visibility="{Binding ValidationError, Converter={StaticResource BoolToVisibilityConverter}}"
                        AutomationProperties.LiveSetting="Assertive"
                        AutomationProperties.Name="Validation error">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âš  "
                                   FontSize="16"
                                   Foreground="{DynamicResource DangerBrush}"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding ValidationError}"
                                   Foreground="{DynamicResource DangerBrush}"
                                   TextWrapping="Wrap"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Grid Grid.Row="1" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="Reset to Defaults"
                    Command="{Binding ResetToDefaultCommand}"
                    Padding="12,10"
                    MinWidth="44"
                    MinHeight="44"
                    Margin="0,0,8,0"
                    TabIndex="7"
                    Background="{DynamicResource DangerBrush}"
                    Foreground="{DynamicResource TextOnPrimaryBrush}"
                    BorderThickness="0"
                    Cursor="Hand"
                    ToolTip="Reset all settings to default values"
                    AutomationProperties.Name="Reset to defaults"
                    AutomationProperties.HelpText="Reset all settings to their default values">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Grid.Column="2"
                    Content="Save"
                    Command="{Binding SaveCommand}"
                    Style="{StaticResource PrimaryButtonStyle}"
                    IsEnabled="{Binding HasChanges}"
                    Margin="0,0,8,0"
                    Padding="12,10"
                    MinWidth="44"
                    MinHeight="44"
                    TabIndex="5"
                    AutomationProperties.Name="Save settings"
                    AutomationProperties.HelpText="Save your changes and close the settings window"/>

            <Button Grid.Column="3"
                    Content="Cancel"
                    Command="{Binding CancelCommand}"
                    Click="Cancel_Click"
                    Padding="12,10"
                    MinWidth="44"
                    MinHeight="44"
                    TabIndex="6"
                    Background="{DynamicResource SurfaceBrush}"
                    Foreground="{DynamicResource TextPrimaryBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    Cursor="Hand"
                    AutomationProperties.Name="Cancel"
                    AutomationProperties.HelpText="Close settings without saving changes">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Grid>
</Window>
