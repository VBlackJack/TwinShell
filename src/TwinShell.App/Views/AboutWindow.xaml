<Window x:Class="TwinShell.App.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="About TwinShell"
        Height="600" Width="550"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}"
        Icon="/Assets/twinshell-icon.png"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <!-- Title Style -->
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- Subtitle Style -->
        <Style x:Key="SubtitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="Margin" Value="0,16,0,8"/>
        </Style>

        <!-- Info Style -->
        <Style x:Key="InfoStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- Feature Style -->
        <Style x:Key="FeatureStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="Margin" Value="0,3"/>
        </Style>

        <!-- Copyright Style -->
        <Style x:Key="CopyrightStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Grid.Row="0">
            <!-- App Icon/Logo -->
            <Border Width="100" Height="100"
                    Margin="0,0,0,16"
                    CornerRadius="20"
                    HorizontalAlignment="Center">
                <Border.Clip>
                    <RectangleGeometry Rect="0,0,100,100" RadiusX="20" RadiusY="20"/>
                </Border.Clip>
                <Image Source="/Assets/twinshell-icon.png"
                       Width="100"
                       Height="100"
                       Stretch="Uniform"/>
            </Border>

            <TextBlock Text="TwinShell" Style="{StaticResource TitleStyle}"/>
            <TextBlock x:Name="VersionText"
                       FontSize="14"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,4,0,8"/>
            <TextBlock Text="PowerShell &amp; Bash Command Manager"
                       Style="{StaticResource SubtitleStyle}"
                       Margin="0,0,0,4"/>
            <TextBlock Text="For System Administrators"
                       Style="{StaticResource SubtitleStyle}"/>
        </StackPanel>

        <!-- Content Section -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,16,0,0">
            <StackPanel>
                <!-- Description -->
                <Border Background="{DynamicResource SurfaceBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16"
                        Margin="0,0,0,12">
                    <TextBlock Style="{StaticResource InfoStyle}">
                        <Run Text="TwinShell is a professional tool designed to simplify system command management and execution. Whether you work on Windows or Linux, TwinShell centralizes your frequent commands and lets you execute them quickly."/>
                    </TextBlock>
                </Border>

                <!-- Author Info -->
                <TextBlock Text="Development" Style="{StaticResource SectionHeaderStyle}"/>
                <Border Background="{DynamicResource SurfaceBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16"
                        Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Style="{StaticResource InfoStyle}">
                            <Run Text="Author: " FontWeight="SemiBold"/>
                            <Run Text="Julien Bombled"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Features -->
                <TextBlock Text="Key Features" Style="{StaticResource SectionHeaderStyle}"/>
                <Border Background="{DynamicResource SurfaceBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,3">
                            <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="12" Foreground="{DynamicResource SuccessBrush}" Margin="0,0,8,0"/>
                            <TextBlock Text="PowerShell and Bash command library" Style="{StaticResource FeatureStyle}" Margin="0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,3">
                            <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="12" Foreground="{DynamicResource SuccessBrush}" Margin="0,0,8,0"/>
                            <TextBlock Text="Direct execution with parameter filling" Style="{StaticResource FeatureStyle}" Margin="0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,3">
                            <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="12" Foreground="{DynamicResource SuccessBrush}" Margin="0,0,8,0"/>
                            <TextBlock Text="Complete execution history" Style="{StaticResource FeatureStyle}" Margin="0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,3">
                            <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="12" Foreground="{DynamicResource SuccessBrush}" Margin="0,0,8,0"/>
                            <TextBlock Text="Category and tag management" Style="{StaticResource FeatureStyle}" Margin="0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,3">
                            <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="12" Foreground="{DynamicResource SuccessBrush}" Margin="0,0,8,0"/>
                            <TextBlock Text="Batch mode for multiple executions" Style="{StaticResource FeatureStyle}" Margin="0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,3">
                            <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="12" Foreground="{DynamicResource SuccessBrush}" Margin="0,0,8,0"/>
                            <TextBlock Text="Advanced search and filtering" Style="{StaticResource FeatureStyle}" Margin="0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,3">
                            <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="12" Foreground="{DynamicResource SuccessBrush}" Margin="0,0,8,0"/>
                            <TextBlock Text="Light/Dark themes" Style="{StaticResource FeatureStyle}" Margin="0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,3">
                            <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="12" Foreground="{DynamicResource SuccessBrush}" Margin="0,0,8,0"/>
                            <TextBlock Text="Command import/export" Style="{StaticResource FeatureStyle}" Margin="0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,3">
                            <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="12" Foreground="{DynamicResource SuccessBrush}" Margin="0,0,8,0"/>
                            <TextBlock Text="Cross-platform support" Style="{StaticResource FeatureStyle}" Margin="0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer Section -->
        <StackPanel Grid.Row="2" Margin="0,16,0,0">
            <TextBlock Text="Â© 2025 TwinShell Project" Style="{StaticResource CopyrightStyle}"/>
            <TextBlock Text="All rights reserved" Style="{StaticResource CopyrightStyle}" Margin="0,2,0,16"/>

            <!-- Close Button -->
            <Button Content="Close"
                    Click="CloseButton_Click"
                    Style="{StaticResource PrimaryButtonStyle}"
                    HorizontalAlignment="Center"
                    Padding="12,10"
                    MinWidth="120"
                    MinHeight="44"/>
        </StackPanel>
    </Grid>
</Window>
