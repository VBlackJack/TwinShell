<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:TwinShell.App.Converters">

    <!-- Converters (Theme-independent) -->
    <converters:PlatformToIconConverter x:Key="PlatformToIconConverter"/>
    <converters:PlatformToTextConverter x:Key="PlatformToTextConverter"/>
    <converters:CriticalityToColorConverter x:Key="CriticalityToColorConverter"/>
    <converters:CriticalityToTextConverter x:Key="CriticalityToTextConverter"/>
    <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    <converters:BoolToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    <converters:ErrorToColorConverter x:Key="ErrorToColorConverter"/>
    <converters:EnumToBooleanConverter x:Key="EnumToBooleanConverter"/>

    <!-- Note: Colors and Styles are now defined in Themes/LightTheme.xaml and Themes/DarkTheme.xaml -->
    <!-- The active theme is merged at runtime by ThemeService -->

</ResourceDictionary>
