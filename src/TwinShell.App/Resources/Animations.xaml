<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ====================================================================== -->
    <!-- TWINSHELL ANIMATIONS & MICRO-INTERACTIONS                            -->
    <!-- Fluid, purposeful animations following Windows 11 design principles  -->
    <!-- ====================================================================== -->

    <!-- ================================================================ -->
    <!-- FADE ANIMATIONS                                                  -->
    <!-- ================================================================ -->

    <!-- Fade In - Standard entrance -->
    <Storyboard x:Key="FadeInStoryboard">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="0.0"
                        To="1.0"
                        Duration="{StaticResource Duration.Normal}"
                        EasingFunction="{StaticResource Easing.Decelerate}"/>
    </Storyboard>

    <!-- Fade In Fast - Quick reveal -->
    <Storyboard x:Key="FadeInFastStoryboard">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="0.0"
                        To="1.0"
                        Duration="{StaticResource Duration.Fast}"
                        EasingFunction="{StaticResource Easing.Decelerate}"/>
    </Storyboard>

    <!-- Fade Out - Standard exit -->
    <Storyboard x:Key="FadeOutStoryboard">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="1.0"
                        To="0.0"
                        Duration="{StaticResource Duration.Fast}"
                        EasingFunction="{StaticResource Easing.Accelerate}"/>
    </Storyboard>

    <!-- ================================================================ -->
    <!-- SLIDE ANIMATIONS                                                 -->
    <!-- ================================================================ -->

    <!-- Slide In From Left -->
    <Storyboard x:Key="SlideInFromLeftStoryboard">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                        From="-50"
                        To="0"
                        Duration="{StaticResource Duration.Normal}"
                        EasingFunction="{StaticResource Easing.Decelerate}"/>
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="0.0"
                        To="1.0"
                        Duration="{StaticResource Duration.Normal}"/>
    </Storyboard>

    <!-- Slide In From Right -->
    <Storyboard x:Key="SlideInFromRightStoryboard">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                        From="50"
                        To="0"
                        Duration="{StaticResource Duration.Normal}"
                        EasingFunction="{StaticResource Easing.Decelerate}"/>
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="0.0"
                        To="1.0"
                        Duration="{StaticResource Duration.Normal}"/>
    </Storyboard>

    <!-- Slide In From Bottom - Dialog entrance -->
    <Storyboard x:Key="SlideInFromBottomStoryboard">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                        From="30"
                        To="0"
                        Duration="{StaticResource Duration.Slow}"
                        EasingFunction="{StaticResource Easing.Decelerate}"/>
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="0.0"
                        To="1.0"
                        Duration="{StaticResource Duration.Slow}"/>
    </Storyboard>

    <!-- ================================================================ -->
    <!-- SCALE ANIMATIONS                                                 -->
    <!-- ================================================================ -->

    <!-- Scale Up - Entrance with spring effect -->
    <Storyboard x:Key="ScaleUpStoryboard">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                        From="0.92"
                        To="1.0"
                        Duration="{StaticResource Duration.Slow}"
                        EasingFunction="{StaticResource Easing.Spring}"/>
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                        From="0.92"
                        To="1.0"
                        Duration="{StaticResource Duration.Slow}"
                        EasingFunction="{StaticResource Easing.Spring}"/>
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="0.0"
                        To="1.0"
                        Duration="{StaticResource Duration.Normal}"/>
    </Storyboard>

    <!-- Scale Down - Exit with acceleration -->
    <Storyboard x:Key="ScaleDownStoryboard">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                        From="1.0"
                        To="0.92"
                        Duration="{StaticResource Duration.Fast}"
                        EasingFunction="{StaticResource Easing.Accelerate}"/>
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                        From="1.0"
                        To="0.92"
                        Duration="{StaticResource Duration.Fast}"
                        EasingFunction="{StaticResource Easing.Accelerate}"/>
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="1.0"
                        To="0.0"
                        Duration="{StaticResource Duration.Fast}"/>
    </Storyboard>

    <!-- ================================================================ -->
    <!-- MICRO-INTERACTIONS                                               -->
    <!-- ================================================================ -->

    <!-- Button Press - Subtle scale down on click -->
    <Storyboard x:Key="ButtonPressStoryboard">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                        To="0.96"
                        Duration="{StaticResource Duration.Instant}"
                        AutoReverse="True"
                        EasingFunction="{StaticResource Easing.Standard}"/>
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                        To="0.96"
                        Duration="{StaticResource Duration.Instant}"
                        AutoReverse="True"
                        EasingFunction="{StaticResource Easing.Standard}"/>
    </Storyboard>

    <!-- Hover Lift - Subtle elevation on hover -->
    <Storyboard x:Key="HoverLiftStoryboard">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                        From="0"
                        To="-2"
                        Duration="{StaticResource Duration.Fast}"
                        EasingFunction="{StaticResource Easing.Decelerate}"/>
    </Storyboard>

    <!-- Hover Reset - Return to normal position -->
    <Storyboard x:Key="HoverResetStoryboard">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                        From="-2"
                        To="0"
                        Duration="{StaticResource Duration.Fast}"
                        EasingFunction="{StaticResource Easing.Decelerate}"/>
    </Storyboard>

    <!-- Focus Glow - Subtle scale pulse for focus state -->
    <Storyboard x:Key="FocusGlowStoryboard" RepeatBehavior="Forever">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                        From="1.0"
                        To="1.02"
                        Duration="0:0:1.5"
                        AutoReverse="True"
                        EasingFunction="{StaticResource Easing.Standard}"/>
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                        From="1.0"
                        To="1.02"
                        Duration="0:0:1.5"
                        AutoReverse="True"
                        EasingFunction="{StaticResource Easing.Standard}"/>
    </Storyboard>

    <!-- ================================================================ -->
    <!-- RIPPLE EFFECT                                                    -->
    <!-- ================================================================ -->

    <!-- Ripple Effect for Buttons (Material Design inspired) -->
    <Style x:Key="RippleButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border x:Name="BorderElement"
                                Background="{TemplateBinding Background}"
                                CornerRadius="{StaticResource Radius.Base}"
                                Padding="{TemplateBinding Padding}"
                                Effect="{StaticResource Elevation.1}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <Ellipse x:Name="RippleEllipse"
                                Fill="{DynamicResource TextOnPrimaryBrush}"
                                Opacity="0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Width="0"
                                Height="0"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <EventTrigger RoutedEvent="Button.Click">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="RippleEllipse"
                                                   Storyboard.TargetProperty="Width"
                                                   From="0"
                                                   To="120"
                                                   Duration="{StaticResource Duration.Slower}"/>
                                    <DoubleAnimation Storyboard.TargetName="RippleEllipse"
                                                   Storyboard.TargetProperty="Height"
                                                   From="0"
                                                   To="120"
                                                   Duration="{StaticResource Duration.Slower}"/>
                                    <DoubleAnimation Storyboard.TargetName="RippleEllipse"
                                                   Storyboard.TargetProperty="Opacity"
                                                   From="0.3"
                                                   To="0"
                                                   Duration="{StaticResource Duration.Slower}"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="BorderElement" Property="Background" Value="{DynamicResource PrimaryHoverBrush}"/>
                            <Setter TargetName="BorderElement" Property="Effect" Value="{StaticResource Elevation.2}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="BorderElement" Property="Effect" Value="{StaticResource Elevation.0}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="BorderElement" Property="Background" Value="{DynamicResource DisabledBrush}"/>
                            <Setter TargetName="BorderElement" Property="Effect" Value="{StaticResource Elevation.0}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ================================================================ -->
    <!-- LOADING STATES                                                   -->
    <!-- ================================================================ -->

    <!-- Loading Spinner -->
    <Style x:Key="LoadingSpinnerStyle" TargetType="ProgressBar">
        <Setter Property="IsIndeterminate" Value="True"/>
        <Setter Property="Height" Value="4"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <!-- Skeleton Loader for List Items -->
    <Style x:Key="SkeletonLoaderStyle" TargetType="Rectangle">
        <Setter Property="Fill">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <LinearGradientBrush.GradientStops>
                        <GradientStop Color="#E0E0E0" Offset="0"/>
                        <GradientStop Color="#F5F5F5" Offset="0.5"/>
                        <GradientStop Color="#E0E0E0" Offset="1"/>
                    </LinearGradientBrush.GradientStops>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Pulse Animation for Loading States -->
    <Storyboard x:Key="PulseStoryboard" RepeatBehavior="Forever">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="0.5"
                        To="1.0"
                        Duration="0:0:0.8"
                        AutoReverse="True"
                        EasingFunction="{StaticResource Easing.Standard}"/>
    </Storyboard>

    <!-- ================================================================ -->
    <!-- ENHANCED LIST ITEM ANIMATIONS                                    -->
    <!-- ================================================================ -->

    <!-- Smooth List Item with Multiple Effects -->
    <Style x:Key="SmoothListItemStyle" TargetType="ListBoxItem" BasedOn="{StaticResource ActionListBoxItemStyle}">
        <Setter Property="RenderTransform">
            <Setter.Value>
                <TransformGroup>
                    <TranslateTransform/>
                    <ScaleTransform CenterX="0" CenterY="0"/>
                </TransformGroup>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <!-- Hover State - Slide right with lift -->
            <Trigger Property="IsMouseOver" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(TranslateTransform.X)"
                                           To="4"
                                           Duration="{StaticResource Duration.Fast}"
                                           EasingFunction="{StaticResource Easing.Decelerate}"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(TranslateTransform.X)"
                                           To="0"
                                           Duration="{StaticResource Duration.Fast}"
                                           EasingFunction="{StaticResource Easing.Decelerate}"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
            </Trigger>

            <!-- Selection State - Subtle scale up -->
            <Trigger Property="IsSelected" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(ScaleTransform.ScaleX)"
                                           From="1.0"
                                           To="1.02"
                                           Duration="{StaticResource Duration.Normal}"
                                           EasingFunction="{StaticResource Easing.Spring}"/>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(ScaleTransform.ScaleY)"
                                           From="1.0"
                                           To="1.02"
                                           Duration="{StaticResource Duration.Normal}"
                                           EasingFunction="{StaticResource Easing.Spring}"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(ScaleTransform.ScaleX)"
                                           To="1.0"
                                           Duration="{StaticResource Duration.Fast}"
                                           EasingFunction="{StaticResource Easing.Decelerate}"/>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(ScaleTransform.ScaleY)"
                                           To="1.0"
                                           Duration="{StaticResource Duration.Fast}"
                                           EasingFunction="{StaticResource Easing.Decelerate}"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ================================================================ -->
    <!-- NOTIFICATION & TOAST ANIMATIONS                                  -->
    <!-- ================================================================ -->

    <!-- Slide In From Top - Notification entrance -->
    <Storyboard x:Key="NotificationSlideInStoryboard">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                        From="-100"
                        To="0"
                        Duration="{StaticResource Duration.Slow}"
                        EasingFunction="{StaticResource Easing.Spring}"/>
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="0.0"
                        To="1.0"
                        Duration="{StaticResource Duration.Normal}"/>
    </Storyboard>

    <!-- Slide Out To Top - Notification exit -->
    <Storyboard x:Key="NotificationSlideOutStoryboard">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                        From="0"
                        To="-100"
                        Duration="{StaticResource Duration.Normal}"
                        EasingFunction="{StaticResource Easing.Accelerate}"/>
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="1.0"
                        To="0.0"
                        Duration="{StaticResource Duration.Normal}"/>
    </Storyboard>

    <!-- ================================================================ -->
    <!-- PAGE TRANSITIONS                                                 -->
    <!-- ================================================================ -->

    <!-- Page Fade Transition -->
    <Storyboard x:Key="PageFadeTransitionStoryboard">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="0.0"
                        To="1.0"
                        Duration="{StaticResource Duration.Slow}"
                        EasingFunction="{StaticResource Easing.Decelerate}"/>
    </Storyboard>

    <!-- Page Slide Transition -->
    <Storyboard x:Key="PageSlideTransitionStoryboard">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                        From="50"
                        To="0"
                        Duration="{StaticResource Duration.Slow}"
                        EasingFunction="{StaticResource Easing.Decelerate}"/>
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="0.0"
                        To="1.0"
                        Duration="{StaticResource Duration.Slow}"/>
    </Storyboard>

    <!-- ================================================================ -->
    <!-- WINDOWS 11 FLUENT REVEAL ANIMATIONS                              -->
    <!-- Light reveal on hover for modern interactive feedback            -->
    <!-- ================================================================ -->

    <!-- Reveal Border Animation - Subtle border glow on hover -->
    <Storyboard x:Key="RevealBorderIn">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        To="1.0"
                        Duration="{StaticResource Duration.Fast}"
                        EasingFunction="{StaticResource Easing.Decelerate}"/>
    </Storyboard>

    <Storyboard x:Key="RevealBorderOut">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        To="0.0"
                        Duration="{StaticResource Duration.Fast}"
                        EasingFunction="{StaticResource Easing.Decelerate}"/>
    </Storyboard>

    <!-- Reveal Highlight - Radial gradient following cursor (simplified) -->
    <Storyboard x:Key="RevealHighlightStoryboard">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="0.0"
                        To="0.15"
                        Duration="{StaticResource Duration.Normal}"
                        AutoReverse="True"
                        EasingFunction="{StaticResource Easing.Standard}"/>
    </Storyboard>

    <!-- ================================================================ -->
    <!-- CONNECTED ANIMATIONS                                             -->
    <!-- Smooth transitions between UI states                             -->
    <!-- ================================================================ -->

    <!-- Connected Animation - Element morphs from source to destination -->
    <Storyboard x:Key="ConnectedAnimationStoryboard">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                        From="0.9"
                        To="1.0"
                        Duration="{StaticResource Duration.Slow}"
                        EasingFunction="{StaticResource Easing.Spring}"/>
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                        From="0.9"
                        To="1.0"
                        Duration="{StaticResource Duration.Slow}"
                        EasingFunction="{StaticResource Easing.Spring}"/>
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="0.0"
                        To="1.0"
                        Duration="{StaticResource Duration.Normal}"/>
    </Storyboard>

    <!-- ================================================================ -->
    <!-- DEPTH ANIMATIONS                                                 -->
    <!-- Elevation changes for interactive elements                       -->
    <!-- ================================================================ -->

    <!-- Lift Animation - Element rises on interaction -->
    <Storyboard x:Key="LiftAnimationStoryboard">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                        From="0"
                        To="-4"
                        Duration="{StaticResource Duration.Fast}"
                        EasingFunction="{StaticResource Easing.Decelerate}"/>
        <DoubleAnimation Storyboard.TargetProperty="(Effect).(DropShadowEffect.ShadowDepth)"
                        From="2"
                        To="8"
                        Duration="{StaticResource Duration.Fast}"
                        EasingFunction="{StaticResource Easing.Decelerate}"/>
        <DoubleAnimation Storyboard.TargetProperty="(Effect).(DropShadowEffect.BlurRadius)"
                        From="8"
                        To="24"
                        Duration="{StaticResource Duration.Fast}"
                        EasingFunction="{StaticResource Easing.Decelerate}"/>
    </Storyboard>

    <!-- Lower Animation - Element returns to rest state -->
    <Storyboard x:Key="LowerAnimationStoryboard">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                        From="-4"
                        To="0"
                        Duration="{StaticResource Duration.Fast}"
                        EasingFunction="{StaticResource Easing.Decelerate}"/>
        <DoubleAnimation Storyboard.TargetProperty="(Effect).(DropShadowEffect.ShadowDepth)"
                        From="8"
                        To="2"
                        Duration="{StaticResource Duration.Fast}"
                        EasingFunction="{StaticResource Easing.Decelerate}"/>
        <DoubleAnimation Storyboard.TargetProperty="(Effect).(DropShadowEffect.BlurRadius)"
                        From="24"
                        To="8"
                        Duration="{StaticResource Duration.Fast}"
                        EasingFunction="{StaticResource Easing.Decelerate}"/>
    </Storyboard>

    <!-- ================================================================ -->
    <!-- ACRYLIC MATERIAL ANIMATIONS                                      -->
    <!-- Smooth material transitions                                      -->
    <!-- ================================================================ -->

    <!-- Material Fade In -->
    <Storyboard x:Key="MaterialFadeInStoryboard">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="0.0"
                        To="0.9"
                        Duration="{StaticResource Duration.Slow}"
                        EasingFunction="{StaticResource Easing.Decelerate}"/>
    </Storyboard>

    <!-- Material Fade Out -->
    <Storyboard x:Key="MaterialFadeOutStoryboard">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="0.9"
                        To="0.0"
                        Duration="{StaticResource Duration.Normal}"
                        EasingFunction="{StaticResource Easing.Accelerate}"/>
    </Storyboard>

    <!-- ================================================================ -->
    <!-- SUBTLE BREATHING ANIMATION                                       -->
    <!-- For live/active indicators                                       -->
    <!-- ================================================================ -->

    <!-- Breathing Effect - Gentle pulsing for status indicators -->
    <Storyboard x:Key="BreathingStoryboard" RepeatBehavior="Forever">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="1.0"
                        To="0.6"
                        Duration="0:0:2"
                        AutoReverse="True"
                        EasingFunction="{StaticResource Easing.Standard}"/>
    </Storyboard>

    <!-- ================================================================ -->
    <!-- ATTENTION SEEKING (Accessibility-friendly)                       -->
    <!-- For important notifications without being disruptive             -->
    <!-- ================================================================ -->

    <!-- Gentle Attention - Single subtle pulse (WCAG compliant) -->
    <Storyboard x:Key="GentleAttentionStoryboard">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                        From="1.0"
                        To="1.05"
                        Duration="{StaticResource Duration.Slow}"
                        AutoReverse="True"
                        EasingFunction="{StaticResource Easing.Standard}"/>
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                        From="1.0"
                        To="1.05"
                        Duration="{StaticResource Duration.Slow}"
                        AutoReverse="True"
                        EasingFunction="{StaticResource Easing.Standard}"/>
    </Storyboard>

</ResourceDictionary>
